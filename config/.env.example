# 
# RIMBORSO KM - Configuration Template
# 
# COPY this file to .env and modify values for your environment
# DO NOT COMMIT .env file with real passwords to git!

# FLASK ENVIRONMENT
FLASK_ENV=production
FLASK_DEBUG=False

# SERVER & PORT
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# SECRET KEY (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production-2024

# DATABASE
DATABASE_URL=
DATABASE_POOL_SIZE=10

# SESSION & SECURITY
SESSION_TIMEOUT_MINUTES=30
SESSION_COOKIE_SECURE=False

# FILE UPLOAD
MAX_UPLOAD_MB=50
UPLOAD_FOLDER=app/uploads

# BACKUP & LOGGING
BACKUP_PATH=backups/
BACKUP_MAX_FILES=10
AUTO_BACKUP_ENABLED=True
LOG_LEVEL=INFO

# LOCALIZATION
TIMEZONE=Europe/Rome
DATE_FORMAT=%Y-%m-%d

# BUSINESS SETTINGS
TARIFFA_STANDARD=0.42
TARIFFA_IBRIDO=0.38
TARIFFA_ELETTRICO=0.35

# GOOGLE MAPS (optional)
GOOGLE_MAPS_API_KEY=

# EMAIL / SMTP (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# PASSWORD & SECURITY
PASSWORD_RESET_TOKEN_EXPIRY=3600
PASSWORD_MIN_LENGTH=8

# RATE LIMITING
LOGIN_RATE_LIMIT_ATTEMPTS=5
API_RATE_LIMIT_REQUESTS=100

# PAGINATION
PAGINATION_DEFAULT_PER_PAGE=20
PAGINATION_MAX_PER_PAGE=100

TESTING=False
